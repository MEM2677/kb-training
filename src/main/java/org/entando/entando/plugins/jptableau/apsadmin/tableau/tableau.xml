<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
    <package name="jptableau_do/jptableau/Tableau" namespace="/do/jptableau/Tableau" extends="entando-default">
    	
    	<action name="list" class="jptableauTableauFinderAction">
            <result type="tiles">jptableau.admin.Tableau.list</result>
        	<interceptor-ref name="entandoDefaultStack">
        		<param name="chain.includeParameters">fieldErrors,actionErrors,actionMessages</param>
        		<param name="requestAuth.requiredPermission">superuser</param>
        	</interceptor-ref>
        </action>
        
        <action name="search" class="jptableauTableauFinderAction">
            <result type="tiles">jptableau.admin.Tableau.list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
        <action name="new" class="jptableauTableauAction" method="newTableau">
            <result type="tiles">jptableau.admin.Tableau.entry</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    	<action name="edit" class="jptableauTableauAction" method="edit">
            <result type="tiles">jptableau.admin.Tableau.entry</result>
            <result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="save" class="jptableauTableauAction" method="save">
        	<result name="input" type="tiles">jptableau.admin.Tableau.entry</result>
        	<result type="redirectAction">list</result>
        	<interceptor-ref name="entandoValidationStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="trash" class="jptableauTableauAction" method="trash">
            <result type="tiles">jptableau.admin.Tableau.trash</result>
        	<result name="input" type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
        
    	<action name="delete" class="jptableauTableauAction" method="delete">
        	<result type="redirectAction">list</result>
        	<interceptor-ref name="entandoDefaultStack"><param name="requestAuth.requiredPermission">superuser</param></interceptor-ref>
        </action>
    	
    </package>
   
</struts>