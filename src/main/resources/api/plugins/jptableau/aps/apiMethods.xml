<apiMethodDefinitions>

	<resource name="tableaus">
        <description>Return the tableau list</description>
        <source pluginCode="jptableau">plugins</source>
		<method httpMethod="GET" active="true" canSpawnOthers="true">
			<description>Return the tableaus list</description>
			<springBean name="jptableauTableauManager" method="getTableausForApi" />
			<responseClass>org.entando.entando.plugins.jptableau.aps.system.services.tableau.api.TableauListResponse</responseClass>
			<!-- 
			<parameters>
			</parameters>
			-->
		</method>
	</resource>
  
    <resource name="tableau">
        <description>The tableau</description>
        <source pluginCode="jptableau">plugins</source>
        <method httpMethod="GET" active="true" canSpawnOthers="true">
            <description>Return a tableau by id</description>
            <springBean name="jptableauTableauManager" method="getTableauForApi" />
            <responseClass>org.entando.entando.plugins.jptableau.aps.system.services.tableau.api.TableauResponse</responseClass>
            <parameters>
                <parameter key="id" required="true">
                    <description>The id of the tableau to return</description>
                </parameter>
            </parameters>
        </method>
        <method httpMethod="POST" active="true" requiredAuth="true" requiredPermission="superuser">
            <description>Add a tableau</description>
            <springBean name="jptableauTableauManager" method="addTableauForApi" />
            <expectedType>org.entando.entando.plugins.jptableau.aps.system.services.tableau.api.JAXBTableau</expectedType>
        </method>
        <method httpMethod="PUT" active="true" requiredAuth="true" requiredPermission="superuser">
            <description>Update a tableau</description>
            <springBean name="jptableauTableauManager" method="updateTableauForApi" />
            <expectedType>org.entando.entando.plugins.jptableau.aps.system.services.tableau.api.JAXBTableau</expectedType>
        </method>
        <method httpMethod="DELETE" active="true" requiredAuth="true" requiredPermission="superuser">
            <description>Delete a tableau by id</description>
            <springBean name="jptableauTableauManager" method="deleteTableauForApi" />
            <parameters>
                <parameter key="id" required="true">
                    <description>The id of the tableau to delete</description>
                </parameter>
            </parameters>
        </method>
    </resource>
	
</apiMethodDefinitions>
