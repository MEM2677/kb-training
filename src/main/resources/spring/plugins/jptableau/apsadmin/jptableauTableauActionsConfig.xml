<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd" >

	<bean id="jptableauTableauPluginSubMenu" class="com.agiletec.apsadmin.system.plugin.PluginSubMenuContainer" >
		<property name="subMenuFilePath"><value>/WEB-INF/plugins/jptableau/apsadmin/jsp/common/layouts/subMenu.jsp</value></property>
	</bean>

	<bean id="jptableauTableauFinderAction" scope="prototype" 
			class="org.entando.entando.plugins.jptableau.apsadmin.tableau.TableauFinderAction" 
			parent="abstractBaseAction" >
		<property name="tableauManager" ref="jptableauTableauManager" />
	</bean>

	<bean id="jptableauTableauAction" scope="prototype" 
			class="org.entando.entando.plugins.jptableau.apsadmin.tableau.TableauAction" 
			parent="abstractBaseAction" >
		<property name="tableauManager" ref="jptableauTableauManager" />
	</bean>


	<bean id="jptableauTableauConfigAction" class="org.entando.entando.plugins.jptableau.apsadmin.portal.specialwidget.tableau.TableauConfigAction"
		parent="simpleWidgetAction" scope="prototype">
		<property name="tableauManager" ref="jptableauTableauManager" />
	</bean>


	<!-- INTERNAL_SERVLET -->
	<bean id="jptableauTableauFinderFrontEndAction" scope="prototype" 
			class="org.entando.entando.plugins.jptableau.aps.internalservlet.tableau.TableauFinderFrontEndAction" 
			parent="abstractBaseAction" >
		<property name="tableauManager" ref="jptableauTableauManager" />
	</bean>
	
	<bean id="jptableauTableauFrontEndAction" scope="prototype" 
			class="org.entando.entando.plugins.jptableau.aps.internalservlet.tableau.TableauFrontEndAction" 
			parent="abstractBaseAction" >
		<property name="tableauManager" ref="jptableauTableauManager" />
	</bean>
 	
 	
</beans>